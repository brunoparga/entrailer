<div class="container">
  <div class="row">
    <h2 class= "text-center">Ingresso para <%= @ticket.screening.detailed_film.film_title.title %></h2>
  </div>
  <div class="row">
    <div class="ticket-info">
      <div id="ticket-pic">
        <img src='https://image.tmdb.org/t/p/w200<%=@ticket.screening.detailed_film.film_title.img_url%>'>
      </div>
      <div class="ticket-new">
        <h4>Sala: <%= @ticket.screening.screen.name %></h4>
        <p><%= @ticket.screening.detailed_film.speech %>, <%= @ticket.screening.detailed_film.format.name %></p>
        <h4>Horário: <%= "#{@ticket.screening.formatted_date}, às #{@ticket.screening.formatted_time}" %></h4>
        <%= form_tag ticket_payments_path(@ticket) do %>
        <article>
          <label class="price">
            <span>Preço: <%= @ticket.price %></span>
          </label>
        </article>

        <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
        data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
        data-name="Film ticket"
        data-email="<%= current_user.email %>"
        data-description="Movie <%= @ticket.screening.detailed_film.film_title.title %>"
        data-amount="<%= @ticket.price_cents %>"
        data-currency="<%= @ticket.price.currency %>"></script>
        <% end %>
      </div>
    </div>
  </div>

  <div
      id="map"
      style="width: 100%;
      height: 650px;"
      data-markers="<%= @markers.to_json %>"
      ></div>
</div>
