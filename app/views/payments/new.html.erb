<div class="container">
  <h2>Ticket for <%= @ticket.screening.detailed_film.film_title.title %></h2>
  <p><%= "#{@ticket.screening.screen.name}, #{@ticket.screening.session_time.strftime('%H:%M')}" %></p>
  <%= form_tag ticket_payments_path(@ticket) do %>
  <article>
    <label class="price">
      <span>Amount: R$ <%= @ticket.price %></span>
    </label>
  </article>

  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
  data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
  data-name="Film ticket"
  data-email="<%= current_user.email %>"
  data-description="Movie <%= @ticket.screening.detailed_film.film_title.title %>"
  data-amount="<%= @ticket.price_centavos %>"
  data-currency="<%= @ticket.price.currency %>"></script>
  <% end %>
</div>
