<div class="navbar-wagon navbar-fixed-top">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-wagon-brand" do %>
    <%= image_tag "logo.png", height: 60 %>
  <% end %>

  <div class='navbar-wagon-center'>

  </div>
  <!-- Right Navigation -->
  <% if !current_user %>
      <div class="navbar-wagon-item hidden-xs hidden-sm">
        <%= link_to 'Entrar', new_user_session_path,
                    class: 'navbar-wagon-item navbar-wagon-link' %>
        <%= link_to 'Cadastrar', new_user_registration_path,
                    class: 'navbar-wagon-item navbar-wagon-link' %>
      </div>
  <% elsif current_user.role == "user" %>
       <a type='button' class="dropdown-toggle navbar-wagon-link" id="navbar-wagon-menu" data-toggle="dropdown"><%= current_user.email %></a>
         <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li><%= link_to "Perfil" %></li>
            <li><%= link_to 'Sair', destroy_user_session_path,
                  method: 'delete' %></li>
          </ul>
    <% elsif current_user.role == "theater_owner" %>
      <!-- Dropdown list -->
      <div class="navbar-wagon-item">
        <div class="dropdown">
          <a type='button' class="dropdown-toggle navbar-wagon-link" id="navbar-wagon-menu" data-toggle="dropdown"><%= current_user.email %></a>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li><%= link_to "Add Film", new_film_title_path %></li>
            <li><%= link_to "Add Screen", new_screen_path %></li>
            <li><%= link_to "List Screens", screens_path %></li>
            <li><%= link_to "Add Screening", new_screening_path %></li>
            <li><%= link_to "List Screenings", screenings_path %></li>
            <li><%= link_to 'Sair', destroy_user_session_path,
                  method: 'delete' %></li>
          </ul>
        </div>
      </div>
    <% end %>
  <!-- Dropdown appearing on mobile only -->
  <% if !current_user %>
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li><%= link_to 'Entrar', new_user_session_path,
                    class: 'navbar-wagon-item navbar-wagon-link' %></li>
          <li><%= link_to 'Cadastrar', new_user_registration_path,
                    class: 'navbar-wagon-item navbar-wagon-link' %></li>
      </ul>
    </div>
  </div>
  <% end %>
</div>
