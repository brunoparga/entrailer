<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://img-s-msn-com.akamaized.net/tenant/amp/entityid/BBIq2dU.img?h=373&w=624&m=6&q=60&o=f&l=f');">
  <div class="banner-content text-center">
    <h1>Movies on!</h1>
    <p>Reserve the best cinema seats</p>
    <div>
      <%= form_tag search_index_path, method: :get do %>
      <%= text_field_tag :query,
      params[:query],
      class: "form-control",
        placeholder: "Procure o seu filme!" %>

        <p></p>
        <%= submit_tag 'BUSCA' , class: 'btn btn-medium'%>
        <% end %>
    </div>
  </div>
</div>
