<div class="container">
  <div class="form-style col-xs-12 col-md-offset-3 col-md-6">
    <h1>Novo filme</h1>

    <input type="text" id="movie_title">
    <button class="btn btn-primary" id="btn-search">Search</button>

    <!-- <div class="hidden"> -->
      <%= simple_form_for @film_title do |f| %>
      <%= f.input :title %>
      <%= f.input :imdb_id %>
      <%= f.input :img_url %>
      <%= f.input :banner_url %>

      <p></p>
      <%= f.button :submit, id: 'Criar filme' %>
      <% end %>
      <!-- </div> -->
      <ul id="movie_list"></ul>
  </div>
</div>
