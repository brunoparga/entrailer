<div class="col-xs-12 col-md-6 search-wrapper">
  <% @film_titles.each do |film| %>
    <% film.screenings.each do |screening| %>
    <%= render 'screenings/screening_card',
           screening: screening,
           film: film,
           display_title: true %>
    <% end %>
  <% end %>
</div>

<div class="col-xs-12 col-md-6 cinemap">
      <div
      id="map"
      style="width: 100%;
      height: 650px;"
      data-markers="<%= @markers.to_json %>"
      ></div>
</div>


