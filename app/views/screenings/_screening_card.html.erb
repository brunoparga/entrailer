  <%= link_to screening_path(screening) do %>
  <div class="screening-card-hover">
    <div class="screening">
        <div class="screening-img">
           <%= image_tag "https://image.tmdb.org/t/p/w200#{film.img_url}" %>
        </div>
        <div class='screening-info'>
          <p><%= "#{screening.formatted_date.capitalize}" %> às <%= "#{screening.formatted_time}" %></p>
          <p><%= screening.screen.name %></p>
          <p>Ingressos disponíveis: <strong>
            <% available_tickets = screening.initial_tickets - screening.tickets.count %>
            <%= available_tickets %>
            </strong>
          </p>
        </div>
        <div class="price">
          <% price = screening.calculate_price(Time.zone.now, available_tickets) %>
          <% session["screening_#{screening.id}_price".to_sym] = price %>
          <p><%= price %></p>
        </div>
    </div>
  </div>
  <% end %>
