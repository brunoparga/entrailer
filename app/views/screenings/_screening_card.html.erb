  <div class="screening row">
    <%= link_to screening_path(screening) do %>
    <div class="screening-img col-xs-12 col-sm-6 col-md-6">
      <%= image_tag "https://image.tmdb.org/t/p/w200#{film.img_url}" %>
    </div>
    <div class='screening-info col-xs-12 col-sm-6 col-md-6'>
      <h3><%= screening.session_time.strftime("%d/%m/%Y, %H:%M") %></h3>

      <h4><em><%= screening.screen.name %></em></h4>

      <h4>Ingressos disponíveis: <strong>
        <% available_tickets = screening.initial_tickets - screening.tickets.count %>
        <%= available_tickets %>
        </strong>
      </h4>
      <h3>A partir de <%= screening.calculate_price(Time.now, available_tickets) %> - compre já!</h3>
    </div>
    <% end %>
  </div>
