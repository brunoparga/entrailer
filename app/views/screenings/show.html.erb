<div class="mini banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://image.tmdb.org/t/p/original<%=@screening.detailed_film.film_title.img_url%>');">
</div>

<div class="container">

  <div class="row">
    <div class="movie-details">
      <img src="https://image.tmdb.org/t/p/w185<%=@screening.detailed_film.film_title.img_url%>">
      <div class="movie-description">
        <h2><%= @screening.detailed_film.film_title.title %></h2>
        <p><%= @screening.detailed_film.speech %>
          - <%= @screening.detailed_film.format.name %></p>
        <p>Sala: <%= @screening.screen.name %> - <%= @screening.screen.address %>
        </p>
        <p>Hor√°rio: <%= @screening.session_time.strftime("%H:%M") %></p>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="buy-options">
      <div>
        <p><%= @screening.initial_tickets - @sold_tickets %> tickets available.</p>
        <p>Buy yours now for only R$ <%= (session[:ticket_price] / 100.0).round(2) %>!</p>
      </div>
      <div>
      <%= button_to 'Comprar!', [@screening, @new_ticket], { class: 'btn btn-primary' } %>
      </div>
    </div>
  </div>

  <div class="map row">

  </div>
</div>

